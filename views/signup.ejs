<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>EventBay</title>
  <link rel="stylesheet" href="css/style.css">
  <link rel="stylesheet" href="css/login.css">
  <script src="https://kit.fontawesome.com/f6ea8c7853.js" crossorigin="anonymous"></script>
  <style>
    .wrapper {
      margin-top: 30px;
    }
  </style>
</head>

<body>
  <header>
    <div class="header">
      <div>
        <h1 id="logo">Event<span id="lg">Bay</span></h1>
      </div>
      <div>
        <nav>
          <ul>
            <li><a href="/login">Add Event</a></li>
            <li><a href="/login">Login</a></li>
            <li><a href="/signup" id="btn">Sign Up</a></li>
          </ul>
        </nav>
      </div>
    </div>
  </header>

  <section>

    <div class="wrapper">
      <div class="error">
        <% if(typeof error !== "undefined") {  %>
             <h3><%= error %></h3>
         <%}%>
         <% if(success_msg != "") {  %>
             <h3><%= success_msg %></h3>
         <%}%>
      </div>
      <h1 style="color:#666">Create an Account</h1>
      <div>
        <form class="" action="/signup" method="POST">
          <div class="form-input">
            <input type="text" name="username" value="" placeholder="username" autocomplete="off" value="<%= typeof username != 'undefined' ? username: '' %>">
          </div>
          <div class="form-input">
            <input type="email" name="email" value="" placeholder="someone@example.com" autocomplete="off" value="<%= typeof email != 'undefined' ? email: '' %>">
          </div>
          <div class="form-input">
            <input type="password" name="password" value="" placeholder="Password" autocomplete="off">
          </div>
          <div class="form-input">
            <input type="password" name="cpassword" value="" placeholder="Confirm Password" autocomplete="off">
          </div>
          <input type="submit" name="submit" value="Sign Up" class="btn"><br>
          <span style="color:#666">OR</span>
          <div style="margin-bottom:10px"></div>
          <p>Already Have an Account ? <a href="/login" id="links">Login here</a></p>
        </form>
      </div>
    </div>
  </section>



<div class="footer">
  <p>Copyright © 2020–2021 EventBay Inc. All right Reserved</p>
  <p><i class="fab fa-linkedin"></i> &nbsp;&nbsp;<i class="fab fa-twitter-square"></i>&nbsp;&nbsp;<i class="fab fa-facebook"></i></p>
</div>

  <script src="https://unpkg.com/typewriter-effect@2.3.1/dist/core.js"></script>
  <script src="scripts/index.js" charset="utf-8"></script>
</body>

</html>


